<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Inponow Web Message</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <script src="/jsjq/jquery.min.js" charset="utf-8"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/socket.io/socket.io.js" charset="utf-8"></script>
  <style media="screen">
    .shadow {
      box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 3px 1px -2px rgba(0, 0, 0, 0.12), 0 1px 5px 0 rgba(0, 0, 0, 0.20) !important;
      border-radius: 7.2px;
    }

    .bg-blue {
      background: #00A3FF !important;
      color: white;
      width: 100% !important;
      border-color: #00a3ff;
    }

    .bg-yellow {
      width: 100%;
      color: #fff;
      border-color: transparent;
      background: #262626 !important;
    }

    .send{
      margin-top: 30px;
    }

    @media screen and (max-width: 768px) {
      .send{
        margin-top: 13px;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <br>
    <div class="row">
      <div class="col-md-12">
        <h3 style="float:left">Inponow <span style="color:#00A3FF">Web Chat</span></h3>
        <!-- <a href="/logout" style="float:right" class="mt-2">üöÄ Logout</a> -->
        <a href="/list" style="float:right;" class="mt-2">üêã Back</a>
      </div>
      <div class="col-md-12 mt-3">
        <div class="alert bg-dark text-white shadow" role="alert">
          Chat to, <strong> <%= data_receiver.name %></strong> üòÄ
        </div>
      </div>
      <div class="col-md-12 mt-3">
        <div id="chat" check="1__">

          <% history_chat.forEach((v,i)=>{ %>

            <% if (v.user_id ==  user_login.id_user) { %>
              <p class="text-right" style="margin:0;padding:5px 0 5px"><small>You ~ <%= v.time_chat %></small></p>
              <div class="alert alert-success text-right"><%= v.message %></div>
            <% } else { %>
              <p class="text-left" style="margin:0;padding:5px 0 5px"><small><%= data_receiver.name %> ~ <%= v.time_chat %></small></p>
              <div class="alert alert-secondary text-left"><%= v.message %></div>
            <% } %>

          <% }) %>

        </div>
        <form id="messageForm" class="mt-3">
          <div class="form-group row">
            <div class="col-md-9">
              <label>Enter Message</label>
              <input type="text" class="form-control" id="message" name="" value="" autocomplete="off">
            </div>
            <div class="col-md-3">
              <button type="submit" style="width:100%" name="button" class="btn bg-blue shadow send">üì® Send Message</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script type="text/javascript">

    $(document).ready(function() {
      $("html, body").animate({ scrollTop: $(document).height() }, 1000);
    })

    function pad(val) {
      var str = "" + val;
      var pad = "00";
      var ans = pad.substring(0, pad.length - str.length) + str;
      return ans;
    }

    $(function() {
      let socket = io.connect()
      let chat = $('#chat')
      let messageForm = $('#messageForm')
      let message = $('#message')

      messageForm.submit(function(e) {
        e.preventDefault()

        //set time now
        let dt = new Date();
        let time = pad(dt.getHours()) + ":" + pad(dt.getMinutes()) + " " + dt.getDate() + "/" + pad(dt.getMonth()+1) + "/" + dt.getFullYear();

        socket.emit('send_message', {
          username: '<%= user_login.username %>',
          message: message.val(),
          receiver: <%= data_receiver.id_user %>,
          group: '<%= group.id_group_chat %>',
          id_me: <%= user_login.id_user %>,
          time_chat: time
        });
        message.val('')
      })

      socket.on(`new_message_<%= group.id_group_chat %>`, function(data) {
        if (data.sender == '~') {
          alert("Can't send your message, please check your connection!");
        }else if (data.sender == '~*') {
          alert("App under maintenance, wait a few more moments ‚âß‚ó†‚Äø‚ó†‚â¶‚úå");
        }else if (data.sender == '<%= user_login.username %>') {
          chat.append(`<p class="text-right" style="margin:0;padding:5px 0 5px"><small>You ~ ${data.time}</small></p><div class="alert alert-success text-right">${data.msg} </div>`)
          $("html, body").animate({ scrollTop: $(document).height() }, 1000);
        } else {
          chat.append(`<p class="text-left" style="margin:0;padding:5px 0 5px"><small><%= data_receiver.name %> ~ ${data.time}</small></p><div class="alert alert-secondary text-left">${data.msg}</div>`)
          $("html, body").animate({ scrollTop: $(document).height() }, 1000);
        }

        // console.log('ini di client');
        console.log('<%= group.id_group_chat %>', 'ini id_group_chat');
      })


    })

    function respo() {
      if ($(window).width() > 768) {
        $('.nbr0012').removeClass('mt-2');
      } else {
        $('.nbr0012').addClass('mt-2');
      }
    }
    respo();
    $(window).resize(function() {
      respo();
    })
    // aldi ajibb
  </script>
</body>

</html>
